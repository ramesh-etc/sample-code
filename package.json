{
  "name": "eztekpay",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@emotion/react": "^11.11.1",
    "@emotion/styled": "^11.11.0",
    "@mui/icons-material": "^5.14.16",
    "@mui/lab": "^5.0.0-alpha.151",
    "@mui/material": "^5.14.16",
    "@mui/x-date-pickers": "^6.19.0",
    "@reduxjs/toolkit": "^1.9.7",
    "@tanstack/react-table": "^8.10.7",
    "@typescript-eslint/eslint-plugin": "^5.62.0",
    "axios": "^1.6.0",
    "base-64": "^1.0.0",
    "crypto-js": "^4.2.0",
    "env-cmd": "^10.1.0",
    "history": "^5.3.0",
    "immutable": "^5.0.0-beta.4",
    "libphonenumber-js": "^1.10.49",
    "moment": "^2.29.4",
    "pdfmake": "^0.2.9",
    "react": "^18.2.0",
    "react-circular-progressbar": "^2.1.0",
    "react-clear-cache": "^1.4.14",
    "react-dom": "^18.2.0",
    "react-dropzone": "^14.2.3",
    "react-inlinesvg": "^4.1.0",
    "react-phone-number-input": "^3.3.7",
    "react-redux": "^8.1.3",
    "react-router-dom": "^6.18.0",
    "react-scripts": "^5.0.1",
    "react-spinners": "^0.13.8",
    "redux-first-history": "^5.1.1",
    "redux-form": "^8.3.10",
    "redux-saga": "^1.2.3",
    "store2": "^2.14.2",
    "tss-react": "^4.9.3",
    "xlsx": "^0.18.5"
  },
  "scripts": {
    "start": "PORT=3001 react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "lint": "eslint --ext .js,.ts,.jsx,.tsx src",
    "format": "yarn run lint --fix & yarn prettier --write 'src/**/*.{js,jsx,ts,tsx}'",
    "prebuild": "npm run generate-build-meta",
    "generate-build-meta": "./node_modules/react-clear-cache/bin/cli.js",

    "start:staging": "env-cmd -f .env.staging npm start",
    "build:staging": "env-cmd -f .env.staging npm run build",
    "staging-invalid-cache": "aws cloudfront create-invalidation --distribution-id E1HTYUE2ILBTWF --paths '/*'",
    "staging-s3-sync": "aws s3 sync build/ s3://stagingapp.eztekpay.com --acl public-read",
    "deploy-staging": "npm run build:staging && npm run staging-s3-sync && npm run staging-invalid-cache",
    
    "start:production": "env-cmd -f .env.production npm start",
    "build:production": "env-cmd -f .env.production npm run build",
    "production-invalid-cache": "aws cloudfront create-invalidation --distribution-id E13DAVHERCLZ2R --paths '/*'",
    "production-s3-sync": "aws s3 sync build/ s3://app.eztekpay.com --acl public-read",
    "deploy-production": "npm run build:production && npm run production-s3-sync && npm run production-invalid-cache"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.1.4",
    "@testing-library/react": "^14.0.0",
    "@testing-library/user-event": "^14.5.1",
    "@types/jest": "^29.5.7",
    "eslint": "^8.52.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-config-react-app": "^7.0.1",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-n": "^16.2.0",
    "eslint-plugin-promise": "^6.1.1",
    "eslint-plugin-react": "^7.33.2",
    "prettier": "^3.0.3"
  }
}